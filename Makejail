INCLUDE options/options.makejail

ARG librewolf_tag=13.2-full

FROM --entrypoint gh+AppJail-makejails/librewolf librewolf:${librewolf_tag}

STOP

STAGE create

CMD --local xhost +

STAGE custom:librewolf_open

ARG display=:0
ARG url?

ENV DISPLAY=${display}
ENV URL=${url}

USER librewolf
RUN librewolf.sh
